<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On/Off"
        android:textSize="25dp"
        android:id="@+id/statusSwitch"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/switchButton"
        android:layout_marginLeft="140dp"/>

    <Switch
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/switchButton"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lamp1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/light_on"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/statusSwitch"
        android:layout_centerHorizontal="true" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lamp2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/light_on"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_below="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp 1"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/lamp1"
        android:layout_alignStart="@+id/lamp1"
        android:layout_below="@+id/lamp1"
        android:paddingLeft="10dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp 2"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lamp2"
        android:layout_marginLeft="140dp"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp 3"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lamp3"
        android:layout_alignRight="@+id/lamp3"
        android:layout_alignEnd="@+id/lamp3" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lamp3"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/light_on"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/lamp2"
        android:layout_alignStart="@+id/lamp2" />
</RelativeLayout>